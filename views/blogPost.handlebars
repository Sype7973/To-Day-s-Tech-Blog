<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4">{{title}}</p>
        <p class="subtitle is-6">{{User.username}}</p>
      </div>
    </div>

    <div class="content">
      {{body}}
      <br>
      {{date_created}}
    </div>
  </div>
</div>

<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4">Comments</p>
      </div>
    </div>
    <div class="content">
      {{#each Blogcomments}}
        <div class="card">
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4">{{User.username}}</p>
              </div>
            </div>
            <div class="content">
              {{comment_body}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>