<section class="section">
  <div class="container">
    <div class="columns is-centered is-vcentered is-multiline">
      <div class="column is-half-desktop is-full-tablet">
        <h2 class="title is-4 has-text-centered">Login</h2>

        <form class="login-form">
          <div class="field">
            <label class="label" for="email-login">Email:</label>
            <div class="control">
              <input class="input" type="text" id="email-login" />
            </div>
          </div>
          <div class="field">
            <label class="label" for="password-login">Password:</label>
            <div class="control">
              <input class="input" type="password" id="password-login" />
            </div>
          </div>
          <div class="field">
            <div class="control has-text-centered">
              <button class="button is-primary" type="submit">Login</button>
            </div>
          </div>
        </form>
      </div>
      <div class="column is-half-desktop is-full-tablet ">
        <h2 class="title is-4 has-text-centered signup-column">Signup</h2>

        <form class="signup-form">
          <div class="field">
            <label class="label" for="name-signup">Name:</label>
            <div class="control">
              <input class="input" type="text" id="name-signup" />
            </div>
          </div>
          <div class="field">
            <label class="label" for="email-signup">Email:</label>
            <div class="control">
              <input class="input" type="text" id="email-signup" />
            </div>
          </div>
          <div class="field">
            <label class="label" for="password-signup">Password:</label>
            <div class="control">
              <input class="input" type="password" id="password-signup" />
            </div>
          </div>
          <div class="field">
            <div class="control has-text-centered">
              <button class="button is-primary" type="submit">Signup</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script src="./js/login-signup.js"></script>