</head>
<nav class="navbar has-background-warning" role="navigation" aria-label="main navigation" id="navBarBanner">
  <div class="navbar-brand">
    <a class="navbar-item" href="http://localhost:8080/pets">
      {{!-- logo image --}}
      <img src="/img/pawsome_care_logo.png" alt="pawsome_care_logo" width="112" height="30" class="logo">
    </a>

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a href="/" class="navbar-item">
        Home
      </a>

      <a href="/pets/all" class="navbar-item">
        Pawesome Community
      </a>

      <div class="navbar-item has-dropdown is-hoverable">
        <a href="/blogs/Cats/all" class="navbar-link">
          Cats Community
        </a>

        <div class="navbar-dropdown">
          <a href="/blogs/Cats/Advice" class="navbar-item">
            Advice
          </a>
          <a href="/blogs/Cats/Funny" class="navbar-item">
            Funny Stories
          </a>
          <hr class="navbar-divider">
          <a href="/blogs/Cats/all" class="navbar-item">
            All Cat Posts
          </a>
        </div>
      </div>

      <div class="navbar-item has-dropdown is-hoverable">
        <a href="/blogs/Dogs/all" class="navbar-link">
          Dogs Community
        </a>

        <div class="navbar-dropdown">
          <a href="/blogs/Dogs/Advice" class="navbar-item">
            Advice
          </a>
          <a href="/blogs/Dogs/Funny" class="navbar-item">
            Funny Stories
          </a>
          <hr class="navbar-divider">
          <a href="/blogs/Dogs/all" class="navbar-item">
            All Dog Posts
          </a>
        </div>
      </div>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">

        {{#if logged_in}}
        <div class="buttons">
          <a id="logout" href="/logout" class="button is-primary" data-user-id="{{user_id}}">
            Log out
          </a>
        </div>
        {{else}}
        <div class="buttons">
          <a href="/login" class="button is-primary">
            <strong>Sign up</strong>
          </a>
          <a href="/login" class="button is-light">
            Log in
          </a>
        </div>
        {{/if}}

      </div>
    </div>
</nav>
<div class="Mainpage">
