{{!-- to create a blogpost handlebar with text area and submit button--}}
<div>
    <form class="newBlogPost-form">
        <div class="field">
            <label class="label" for="title">Title:</label>
            <div class="control">
                <input class="input" type="text" id="title" />
            </div>
        </div>
        <div class="field">
            <label class="label" for="body">Body:</label>
            <div class="control">
                <textarea class="textarea" id="body"></textarea>
            </div>
        </div>
        <div class="field">
            <div class="control has-text-centered">
                <button class="button is-primary" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>